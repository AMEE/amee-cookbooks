# Template stamped out by Chef

upstream <%= @name %>_unicorn {
  server unix:/tmp/<%= @name %>.unicorn.sock;
}

server {
  server_name <%= @name %>;
  try_files $uri/index.html $uri.html $uri @<%= @name %>;
  location / {
    proxy_set_header Host $http_host;
    proxy_pass http://<%= @name %>_unicorn;
  }
}
